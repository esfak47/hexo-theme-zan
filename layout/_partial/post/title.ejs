<% if (item.link){ %>
  <% if (item.title){ %>
  						<div class="title-article">

							<h1><a href="<%= url_for(item.path) %>">
								<%= item.title %>
							</a></h1>
						</div>
  <% } else { %>
    						<div class="title-article">

							<h1><a href="<%= url_for(item.path) %>">
							<%= item.link %>
							</a></h1>
						</div>
  <% } %>
<% } else { %>
  <% if (index){ %>
  <div class="title-article">

							<h1><a href="<%= url_for(item.path) %>">
								<%= item.title %>
							</a></h1>
						</div>
  <% } else { %>
    <div class="title-article">

							<h1><%= item.title %></h1>
						</div>
  <% } %>
<% } %>